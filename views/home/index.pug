extends ../layout.pug

block content
  h1.head-title Welcome to ShopStop!
  form#search-form
    input#search.input-field(name='query', type='text', placeholder='Search...')
    input.btn(type='submit', value='Search')
  .cards
    each product in products
      .product-card
        img.product-img(src=`${product.image}`)
        h2=product.name
        p=product.description